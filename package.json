{
  "name": "ram-react-modal",
  "version": "0.0.5",
  "description": "A React modal with TypeScript, Tailwind CSS, and scale-up animations that originate from the triggering element.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc && (if exist .\\src\\ModalBase.css (copy .\\src\\ModalBase.css .\\dist\\ || echo File copied) || cp src/ModalBase.css dist/ || echo File copied)",
    "dev": "tsc --watch && cp src/ModalBase.css dist/ModalBase.css"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": false
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reqbahrf/modal-package.git"
  },
  "author": "Reanz Arthur A. Monera",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.1"
  },
  "keywords": [
    "react",
    "modal",
    "typescript",
    "tailwindcss",
    "context",
    "hooks",
    "animation",
    "component",
    "scale-up",
    "originating",
    "triggering"
  ]
}
