{
  "name": "ram-react-modal",
  "version": "1.0.2",
  "description": "A lightweight and customizable React modal with TypeScript support. Includes a dynamic scale-up animation that starts from the trigger element, support for stacking modals, and an optional confirmation step before closing.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc && cp src/ModalBase.css dist/ModalBase.css",
    "build:local": "tsc && copy .\\src\\ModalBase.css .\\dist\\",
    "dev": "tsc --watch && cp src/ModalBase.css dist/ModalBase.css"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reqbahrf/modal-package.git"
  },
  "author": "Reanz Arthur A. Monera",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.1"
  },
  "keywords": [
    "react",
    "modal",
    "typescript",
    "context",
    "hooks",
    "animation",
    "component",
    "scale-up",
    "originating",
    "triggering",
    "on closing confirmation"
  ]
}
